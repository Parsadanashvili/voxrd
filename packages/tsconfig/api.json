{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Express",
    "extends": "./base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "lib": ["dom", "es6"],
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}
    